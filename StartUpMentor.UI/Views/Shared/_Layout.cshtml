<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="GSC is a platform which will boost your startup skyhigh!">
    <meta name="author" content="GSC">
    <title>@ViewBag.Title - GSC - Global Startup Consultant</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default navbar-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button id="navigation" type="button" class="navbar-toggle" data-toggle="collapse" data-target="#gsc-navigation-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"><span class="fa fa-globe"></span> GlobalStartupConsultant</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right" id="gsc-navigation-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("About", "About", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Service", "Index", "Field")
                    </li>
                    <li>
                        @Html.ActionLink("Contact", "Contact", "Home")
                    </li>
                        @Html.Partial("_LoginPartial");
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <div>
        @RenderBody()

        <hr class="featurette-divider">
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-11 col-lg-push-1">
                    <p>Copyright &copy; <a href="#">globalstartupconsultant.com</a> 2016</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>
        @*<footer class="container">
            <hr />
            <p>&copy; @DateTime.Now.Year - Global Startup Consultant</p>
        </footer>    *@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
